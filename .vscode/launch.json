    "configurations": [

        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "env":{"PYTHONPATH":"${workspaceRoot}"},
            "envFile":"${workspaceFolder}/.env",
            "justMyCode": false,

          }
    ],
    "workbench.editor.enablePreview": true,

}

